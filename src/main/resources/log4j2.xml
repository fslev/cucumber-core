<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="CCoreConsole" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{HH:mm:ss} [%t] %highlight{%-5level %logger{36}} - %highlight{%msg}{DEBUG=white, INFO=white}%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="ro.cucumber.utils" level="info" additivity="false">
            <AppenderRef ref="CCoreConsole"/>
        </logger>
    </Loggers>
</Configuration>